{
  "name": "react-expand-animated",
  "version": "0.0.0",
  "description": "The expand component that animate the height of child component when toggling",
  "main": "src/expand.js",
  "repository": "https://github.com/sonybinhle/react-expand-animated.git",
  "author": "Binh Le <sonybinhle@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:cov": "rm -rf ./coverage && npm run test -- --coverage",
    "prepush": "npm run test:cov",
    "prepublishOnly": "npm run test:cov",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint --fix src"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.12.2",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^22.1.4"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    }
  }
}
